<h4> Authors you might be searching </h4>
<% @authors.each do |author| %>
  <dl> <%= author.name %> </dl>
<% end %>

<h4> Books you might be searching </h4>
<% @books.each do |book| %>
  <dt> <%= link_to book.title, book_path(book) %> </dt>
  <dt> Description: <%= book.description %> </dt>
  <dt> Author: <%= book.author.name %> </dt>
  <dt> Genre: <%= book.genre.title %> </dt>
<% end %>