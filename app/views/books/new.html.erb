<h1> New book form </h1>
<%= form_with model: @book do |f| %>
  <% @book.errors.full_messages.each do |error| %>
    <dt> â€¢ <%= error %> </dt>
  <% end %>
  <dt> <%= f.label :title %> <%= f.text_field :title %> </dt>
  <dt> <%= f.label :description %> <%= f.text_field :description %> </dt>
  <dt>
  <%= f.label :author_id %>
  <%= f.collection_select :author_id, Author.all, :id, :name, prompt: true %>
  </dt>
  <dt> <%= f.label :genre_id %> 
  <%= f.collection_select :genre_id, Genre.all, :id, :title, prompt: true %>
  </dt>
  <dt> <%= f.label :price %> <%= f.number_field :price, step: :any %> </dt>
  <dt> <%= f.submit %> </dt>
<% end %>